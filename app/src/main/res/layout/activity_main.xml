<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context="com.vone.vmq.MainActivity">

    <include layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:layout_margin="12dp"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/txt_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/textPrimary"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:text="通知地址：https://pay.weixin.com" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/txt_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/textPrimary"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:text="通讯密钥：12345678" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp">
        
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <Button
                android:id="@+id/btn_qrcode"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="startQrCode"
                android:elevation="2dp"
                android:text="扫码配置" />
                
            <Button
                android:id="@+id/btn_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="doInput"
                android:elevation="2dp"
                android:text="手动配置" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="doStart"
                android:elevation="2dp"
                android:text="检测心跳" />

            <Button
                android:id="@+id/btn_checkpush"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="checkPush"
                android:elevation="2dp"
                android:text="检测监听" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_clear_logs"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="clearLogs"
                android:elevation="2dp"
                android:text="清除日志" />

            <Button
                android:id="@+id/btn_copy_logs"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/rounded_button_compat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:onClick="copyLogs"
                android:elevation="2dp"
                android:text="复制日志" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/card_background"
        android:elevation="2dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="日志输出"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />
            
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />
            
        <ScrollView
            android:id="@+id/log_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/log_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/textSecondary"
                android:textSize="14sp" />
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by vipkj.net"
        android:gravity="right"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textColor="#BBBBBB"
        android:textSize="12sp"
        android:onClick="openVipkj"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
